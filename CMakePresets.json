{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "STAT_BENCH_ENABLE_AUSAN": "OFF",
        "STAT_BENCH_TESTING": "ON",
        "STAT_BENCH_WRITE_JUNIT": "OFF",
        "STAT_BENCH_ENABLE_BENCH": "ON",
        "STAT_BENCH_TEST_BENCHMARKS": "OFF",
        "STAT_BENCH_BUILD_EXAMPLES": "ON",
        "STAT_BENCH_BUILD_DOC": "OFF"
      }
    },
    {
      "name": "msvc-debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/Debug",
      "installDir": "${sourceDir}/install/Debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "msvc-release",
      "inherits": "msvc-debug",
      "binaryDir": "${sourceDir}/build/Release",
      "installDir": "${sourceDir}/install/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug-default",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release-default",
      "configurePreset": "msvc-release"
    }
  ],
  "testPresets": [
    {
      "name": "msvc-debug-default",
      "configurePreset": "msvc-debug",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "msvc-release-default",
      "configurePreset": "msvc-release",
      "output": { "outputOnFailure": true }
    }
  ]
}
